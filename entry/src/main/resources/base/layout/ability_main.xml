<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:width="match_parent"
    ohos:height="match_parent"
    ohos:total_weight="3"
    ohos:top_margin="10vp"
    ohos:orientation="vertical">

    <Text
        ohos:id="$+id:btn_home"
        ohos:width="match_parent"
        ohos:height="0vp"
        ohos:weight="1"
        ohos:text="Home"
        ohos:text_color="#9b92b3"
        ohos:margin="10vp"
        ohos:top_padding="40vp"
        ohos:bottom_padding="40vp"
        ohos:text_size="20fp"
        ohos:text_alignment="center"/>

    <Text
        ohos:id="$+id:btn_menus"
        ohos:width="match_parent"
        ohos:height="0vp"
        ohos:weight="1"
        ohos:text="Menus"
        ohos:text_color="#9b92b3"
        ohos:margin="10vp"
        ohos:top_padding="40vp"
        ohos:bottom_padding="40vp"
        ohos:text_size="20fp"
        ohos:text_alignment="center"/>

    <Text
        ohos:id="$+id:btn_progress"
        ohos:width="match_parent"
        ohos:height="0vp"
        ohos:weight="1"
        ohos:text="Progress"
        ohos:text_color="#9b92b3"
        ohos:margin="10vp"
        ohos:top_padding="40vp"
        ohos:bottom_padding="40vp"
        ohos:text_size="20fp"
        ohos:text_alignment="center"/>

</DirectionalLayout>